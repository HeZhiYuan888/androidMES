<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.EditText" parent="AppBaseTheme">
        <item name="android:textColor">@drawable/black</item>
        <item name="android:textColorHint">@drawable/edittext_hint_color</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="AppTheme.TextView" parent="AppBaseTheme">
        <item name="android:textColor">@drawable/textview_color</item>
        <item name="android:textSize">@dimen/fifteen_font_size</item>
    </style>
    <style name="AppTheme.TextViewRight" parent="AppTheme.TextView">
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <style name="AppTheme.TextViewLeft" parent="AppTheme.TextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
	
    <style name="AppTheme.ListTitle">
		<item name="android:textColor">@drawable/textview_color</item>
        <item name="android:textSize">@dimen/nighteen_font_size</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>
